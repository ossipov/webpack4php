{
  "name": "webpack4php",
  "version": "0.0.1",
  "description": "Webpack 4 config for starting a web-page design from scratch. It helps with rapid CSS styling and JS inclusion.",
  "main": "webpack.config.js",
  "repository": "https://github.com/ossipov/webpack4php",
  "author": "Dmitry Ossipov",
  "license": "MIT",
  "scripts": {
    "dev": "webpack --mode development",
    "build": "rm -rf ./public/assets/css ./public/assets/js | webpack --mode production",
    "watch": "rm -rf ./public/assets/css ./public/assets/js | webpack --mode development --watch",
    "clean": "rm -rf ./public/assets | rm -f ./src/assets.json ./src/sass/app.sass.json ./src/favicon/favicons.json"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "assets-webpack-plugin": "^3.9.7",
    "autoprefixer": "^9.2.1",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^1.0.0",
    "csso-webpack-plugin": "^1.0.0-beta.12",
    "extra-watch-webpack-plugin": "^1.0.3",
    "favicons-webpack-plugin": "^0.0.9",
    "fs": "^0.0.1-security",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "postcss-loader": "^3.0.0",
    "postcss-modules": "^1.4.1",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "sass-loader": "^7.1.0",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-livereload-plugin": "^2.1.1"
  }
}
